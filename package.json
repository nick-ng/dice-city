{
  "name": "dice-city",
  "version": "1.0.0",
  "description": "Based on a board game.",
  "main": "./dist-back/main.js",
  "type": "module",
  "scripts": {
    "test-ci": "TS_NODE_PROJECT='./tsconfig.mocha.json' mocha",
    "test-benchmark": "TS_NODE_PROJECT='./tsconfig.mocha.json' NODE_ENV=development mocha",
    "test": "nodemon --legacy-watch --config nodemon.tests.json --exec npm run test-ci",
    "dev-back": "TS_NODE_PROJECT='./src-back/tsconfig.json' nodemon -L ./src-back/main.ts",
    "dev-front": "vite --host",
    "dev-worker": "TS_NODE_PROJECT='./src-back/tsconfig.json' nodemon -L ./src-back/worker.ts",
    "start": "npm run stop && docker compose up -d && vite --host",
    "dev-logs": "docker compose logs -f",
    "stop": "docker compose down",
    "serve": "node ./dist-back/main.js",
    "worker": "node ./dist-back/worker.js",
    "build-back": "NODE_ENV=production node ./esbuild.js",
    "build-front": "vite build",
    "check-build": "rm -rf ./dist-* && tsc --build ./src-back/tsconfig.json && vite build",
    "prepare": "husky install",
    "vite": "vite"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nick-ng/dice-city.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nick-ng/dice-city/issues"
  },
  "homepage": "https://github.com/nick-ng/dice-city#readme",
  "dependencies": {
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.182",
    "@types/node": "^20.1.4",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "@types/seedrandom": "^3.0.2",
    "@types/ws": "^8.5.3",
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.12",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "esbuild": "^0.17.19",
    "express": "^4.18.1",
    "immer": "^10.0.2",
    "lodash": "^4.17.21",
    "postcss": "^8.4.23",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.1",
    "redis": "^4.6.6",
    "seedrandom": "^3.0.5",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "vite": "^4.3.5",
    "ws": "^8.7.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.2.2",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "mocha": {}
}
