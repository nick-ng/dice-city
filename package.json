{
  "name": "dice-city",
  "version": "1.0.0",
  "description": "Based on a board game.",
  "main": "./dist-back/main.js",
  "scripts": {
    "test-ci": "TS_NODE_PROJECT='./tsconfig.mocha.json' mocha",
    "test": "TS_NODE_PROJECT='./tsconfig.mocha.json' NODE_ENV=development mocha",
    "once": "NODE_ENV=development rm -rf ./dist-* && tsc --build ./src-back/tsconfig.json",
    "dev-back": "NODE_ENV=development tsc --build ./src-back/tsconfig.json --watch & nodemon --config nodemon.main.json ./dist-back/main.js",
    "dev-front": "NODE_ENV=development nodemon -L --config nodemon.front.json ./esbuild.dev.config.js",
    "dev-worker": "NODE_ENV=development nodemon --config nodemon.worker.json ./dist-back/worker.js",
    "start": "npm run stop && docker compose build && docker compose up -d && docker compose logs -f",
    "stop": "docker compose down",
    "tailwind-watch": "tailwindcss -i ./src-front/base.css -o ./dist-front/output.css --watch --poll",
    "serve": "node ./dist-back/main.js",
    "build-back": "NODE_ENV=production tsc --build ./src-back/tsconfig.json",
    "build-front": "NODE_ENV=production node esbuild.config.js && tailwindcss -i ./src-front/base.css -o ./dist-front/output.css --minify",
    "check-build": "rm -rf ./dist-* && tsc --build ./src-back/tsconfig.check.json && node esbuild.check.config.js",
    "sim-deploy": "rm -rf ./dist-* && npm run heroku-postbuild && npm run serve",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nick-ng/dice-city.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nick-ng/dice-city/issues"
  },
  "homepage": "https://github.com/nick-ng/dice-city#readme",
  "dependencies": {
    "@craftamap/esbuild-plugin-html": "^0.4.0",
    "@tsconfig/node16": "^1.0.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.182",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.45",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/seedrandom": "^3.0.2",
    "@types/ws": "^8.5.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "esbuild": "^0.14.42",
    "express": "^4.18.1",
    "fp-ts": "^2.12.2",
    "immer": "^9.0.16",
    "io-ts": "^2.2.18",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.2",
    "redis": "^4.1.0",
    "seedrandom": "^3.0.5",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.7.3",
    "ws": "^8.7.0"
  },
  "devDependencies": {
    "concurrently": "^7.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "ts-node": "^10.9.1"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "mocha": {}
}
