{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "ESNext",
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,

    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "paths": {
      "@front/*": ["src-front/*"],
      "@common/*": ["src-common/*"],
      "@back": ["src-back/*"]
    }
  }
}
